# =============================================================================
# marktoflow Environment Configuration
# =============================================================================
#
# Copy this file to .env and fill in your values.
#
# .env files are loaded from (in order, later overrides earlier):
#   1. ~/.marktoflow/.env (user-level defaults)
#   2. ./.env (project root)
#   3. ./.marktoflow/.env (project-specific overrides)
#
# =============================================================================


# =============================================================================
# AI Provider API Keys
# =============================================================================

# Anthropic (Claude)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google AI (Gemini)
# Get your key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=
# GEMINI_API_KEY=  # Alternative name

# Cohere
# Get your key at: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=

# Mistral
# Get your key at: https://console.mistral.ai/api-keys/
MISTRAL_API_KEY=

# Groq
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=

# Together AI
# Get your key at: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=

# Fireworks AI
# Get your key at: https://fireworks.ai/api-keys
FIREWORKS_API_KEY=

# Replicate
# Get your token at: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=

# HuggingFace
# Get your token at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=
# HF_TOKEN=  # Alternative name


# =============================================================================
# Local LLM Configuration
# =============================================================================

# Ollama (local LLMs)
# Default: http://localhost:11434
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# LM Studio (local LLMs)
# Default: http://localhost:1234
LMSTUDIO_HOST=http://localhost:1234


# =============================================================================
# Claude Code CLI Configuration
# =============================================================================

# Claude Code execution mode: cli or sdk
# - cli: Use Claude Code CLI subprocess (default)
# - sdk: Use claude-agent-sdk Python library
CLAUDE_CODE_MODE=cli

# Path to Claude Code CLI executable
# Default: "claude" (searches PATH)
CLAUDE_CODE_CLI_PATH=claude

# Claude Code model: sonnet, opus, or haiku
# Default: sonnet
CLAUDE_CODE_MODEL=sonnet

# Claude Code timeout in seconds
# Default: 300 (5 minutes)
CLAUDE_CODE_TIMEOUT=300


# =============================================================================
# OpenCode Configuration
# =============================================================================

# OpenCode server URL (when using server mode)
# Default: http://localhost:4096
OPENCODE_SERVER_URL=http://localhost:4096

# OpenCode execution mode: auto, cli, or server
# - auto: Try server first, fall back to CLI
# - cli: Always use CLI subprocess
# - server: Always use server REST API
OPENCODE_MODE=auto


# =============================================================================
# MCP Server Configuration
# =============================================================================

# MCP server URL (if using centralized MCP server)
MCP_SERVER_URL=


# =============================================================================
# External Service Integrations
# =============================================================================

# GitHub
# Get your token at: https://github.com/settings/tokens
GITHUB_TOKEN=
# GH_TOKEN=  # Alternative name (used by gh CLI)

# GitLab
# Get your token at: https://gitlab.com/-/profile/personal_access_tokens
GITLAB_TOKEN=

# Jira
# Get your token at: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com

# Slack
# Create a bot at: https://api.slack.com/apps
SLACK_TOKEN=
# SLACK_BOT_TOKEN=  # Alternative name
SLACK_WEBHOOK_URL=

# Discord
# Create a webhook in channel settings
DISCORD_WEBHOOK_URL=

# Linear
# Get your key at: https://linear.app/settings/api
LINEAR_API_KEY=

# Notion
# Create an integration at: https://www.notion.so/my-integrations
NOTION_API_KEY=


# =============================================================================
# Database and Queue Configuration
# =============================================================================

# Redis (for distributed queues)
# Default: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# RabbitMQ (for message queues)
# Default: amqp://guest:guest@localhost:5672
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Database URL (if using external database for state)
# Examples:
#   sqlite:///path/to/db.sqlite
#   postgresql://user:pass@localhost/dbname
DATABASE_URL=


# =============================================================================
# Application Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
MARKTOFLOW_LOG_LEVEL=INFO

# Enable debug mode (verbose logging, stack traces)
MARKTOFLOW_DEBUG=false

# Prometheus metrics server port
MARKTOFLOW_METRICS_PORT=9090

# Webhook receiver server port
MARKTOFLOW_WEBHOOK_PORT=8080

# State directory (relative to project root or absolute path)
MARKTOFLOW_STATE_DIR=.marktoflow/state

# Encryption key for credential storage (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MARKTOFLOW_ENCRYPTION_KEY=

# Maximum concurrent workflow executions
MARKTOFLOW_MAX_CONCURRENT=5
