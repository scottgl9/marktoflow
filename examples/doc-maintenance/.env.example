# Documentation Maintenance Workflow Environment Variables
# Copy this file to .env and configure for your environment

# ============================================================================
# AI Agent Configuration (choose one)
# ============================================================================

# Ollama (recommended for local/private use)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# OpenAI (for cloud-based processing)
# OPENAI_API_KEY=sk-...

# Anthropic Claude (alternative cloud option)
# ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# Execution Settings
# ============================================================================

# Timeout for each component analysis (seconds)
MARKTOFLOW_TIMEOUT=600

# Maximum retry attempts for failed operations
MARKTOFLOW_MAX_RETRIES=3

# Log level: DEBUG, INFO, WARNING, ERROR
MARKTOFLOW_LOG_LEVEL=INFO

# ============================================================================
# Model Settings
# ============================================================================

# Temperature for AI generation (0.0-2.0, lower = more consistent)
MARKTOFLOW_TEMPERATURE=0.3

# Specific model to use (overrides agent default)
# MARKTOFLOW_MODEL=gpt-4
# MARKTOFLOW_MODEL=claude-3-5-sonnet-20241022
# MARKTOFLOW_MODEL=llama3:70b

# ============================================================================
# Workflow-Specific Settings
# ============================================================================

# Maximum components to process in single run (0 = unlimited)
# DOC_MAINTENANCE_MAX_COMPONENTS=0

# Default to dry-run mode (true/false)
# DOC_MAINTENANCE_DRY_RUN=false
