{
  "name": "@marktoflow/core",
  "version": "2.0.0-alpha.12",
  "description": "Core engine for marktoflow - parser, executor, state management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marktoflow/marktoflow.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/marktoflow/marktoflow#readme",
  "bugs": {
    "url": "https://github.com/marktoflow/marktoflow/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config integration-tests/vitest.integration.config.ts",
    "test:integration:watch": "vitest --config integration-tests/vitest.integration.config.ts",
    "test:all": "vitest run && vitest run --config integration-tests/vitest.integration.config.ts",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "amqplib": "^0.10.9",
    "better-sqlite3": "11.10.0",
    "chokidar": "^5.0.0",
    "cron-parser": "^5.5.0",
    "dotenv": "^16.4.5",
    "ioredis": "^5.9.2",
    "minimatch": "^10.1.1",
    "nunjucks": "^3.2.4",
    "pino": "^10.3.0",
    "prom-client": "^15.1.3",
    "yaml": "^2.6.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/better-sqlite3": "^7.6.0",
    "@types/nunjucks": "^3.2.6",
    "@types/pino": "^7.0.5",
    "pino-pretty": "^13.1.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "marktoflow",
    "workflow",
    "parser",
    "automation",
    "mcp"
  ],
  "author": "Scott Glover",
  "license": "Apache-2.0"
}
